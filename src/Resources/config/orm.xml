<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jcid.rabbitmq.listener.doctrine.orm.post.message.class">Jcid\RabbitMQBridge\EventDispatcher\Listener\DoctrineOrmPostMessageEventListener</parameter>
    </parameters>

    <services>
        <service id="jcid.rabbitmq.listener.doctrine.orm.post.message" class="%jcid.rabbitmq.listener.doctrine.orm.post.message.class%">
            <tag name="event_subscriber" subscribes_to="Jcid\RabbitMQBridge\EventDispatcher\Events\PostMessageEvent" />
            <argument type="service" id="doctrine" />
        </service>
    </services>
</container>
